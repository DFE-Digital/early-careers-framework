<tr class="govuk-table__row">
<% if FeatureFlag.active?(:change_of_circumstances) %>
  <% if ineligible_participant? && !mentor_in_early_rollout? %>

    <td class="govuk-table__cell govuk-!-width-three-quarters"><%= govuk_link_to profile.user.full_name, schools_participant_path(id: profile) %></td>
    <td class="govuk-table__cell govuk-!-width-one-quarter">Remove</td>

  <% elsif transferred_participant? %>

    <td class="govuk-table__cell govuk-!-width-one-half"><%= govuk_link_to profile.user.full_name, schools_participant_path(id: profile) %></td>
    <td class="govuk-table__cell govuk-!-width-one-quarter"><%= school_cohort.transferred_induction_records.where(participant_profile: profile).first.end_date.to_date.to_s(:govuk) %></td>
    <td class="govuk-table__cell govuk-!-width-one-quarter">Remove</td>

  <% else %>

    <td class="govuk-table__cell govuk-!-width-one-quarter"><%= govuk_link_to profile.user.full_name, schools_participant_path(id: profile) %></td>

    <% if participant_is_on_a_cip? %>
      <td class="govuk-table__cell govuk-!-width-one-half"><%= profile.current_induction_programme.core_induction_programme&.name %></td>
    <% else %>
      <td class="govuk-table__cell govuk-!-width-one-quarter"><%= profile.current_induction_programme&.lead_provider&.name %></td>
      <td class="govuk-table__cell govuk-!-width-one-quarter"><%= profile.current_induction_programme&.delivery_partner&.name %></td>
    <% end %>

    <td class="govuk-table__cell govuk-!-width-one-quarter"><%= date_column_value %></td>
  <% end %>

<% else %>

  <% if ineligible_participant? && !mentor_in_early_rollout? %>
    <td class="govuk-table__cell govuk-!-width-three-quarters"><%= govuk_link_to profile.user.full_name, schools_participant_path(id: profile) %></td>
    <td class="govuk-table__cell govuk-!-width-one-quarter">Remove</td>

  <% else %>

    <td class="govuk-table__cell govuk-!-width-one-quarter"><%= govuk_link_to profile.user.full_name, schools_participant_path(id: profile) %></td>

    <% if participant_is_on_a_cip? %>
      <td class="govuk-table__cell govuk-!-width-one-half"><%= profile.school_cohort&.core_induction_programme&.name %></td>
    <% else %>
      <td class="govuk-table__cell govuk-!-width-one-quarter"><%= profile.school_cohort&.lead_provider&.name %></td>
      <td class="govuk-table__cell govuk-!-width-one-quarter"><%= profile.school_cohort&.delivery_partner&.name %></td>
    <% end %>

    <td class="govuk-table__cell govuk-!-width-one-quarter"><%= date_column_value %></td>
  <% end %>
<% end %>
</tr>
