<% content_for :title, t("finance.choose_programme") %>
<% content_for :before_content, govuk_back_link(text: "Back", href: finance_payment_breakdowns_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @choose_programme_form, url: { action: :choose_provider_ecf }, method: :post do |f| %>
      <%= f.govuk_error_summary %>
      <h1 class="govuk-heading-xl">Choose provider</h1>
      <%= f.govuk_collection_radio_buttons(
            :provider,
            @choose_programme_form.ecf_providers,
            :id,
            :name,
            legend: { hidden: true },
            ) %>
      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
