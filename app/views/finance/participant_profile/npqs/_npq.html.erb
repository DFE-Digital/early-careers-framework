<h3><%= npq.type %></h3>

<%= govuk_summary_list do |summary_list| %>
  <% summary_list.row do |row| %>
    <% row.key { "User ID / Participant ID" } %>
    <% row.value { @user.id } %>
    <% row.action %>
  <% end %>

  <% summary_list.row do |row| %>
    <% row.key { "Profile ID" } %>
    <% row.value { npq.id } %>
    <% row.action %>
  <% end %>

  <% summary_list.row do |row| %>
    <% row.key { "Eligible for funding" } %>
    <% row.value { npq.fundable?.to_s.upcase } %>
    <% row.action %>
  <% end %>

  <% summary_list.row do |row| %>
    <% row.key { "NPQ course" } %>
    <% row.value { npq.npq_course&.name } %>
    <% row.action %>
  <% end %>

  <% summary_list.row do |row| %>
    <% row.key { "Lead provider" } %>
    <% row.value { npq.npq_application&.npq_lead_provider&.name } %>
    <% row.action %>
  <% end %>

  <% summary_list.row do |row| %>
    <% row.key { "School URN" } %>
    <% row.value { npq.npq_application&.school_urn } %>
    <% row.action %>
  <% end %>

  <% summary_list.row do |row| %>
    <% row.key { "Status" } %>
    <% row.value { npq.status } %>
    <% row.action %>
  <% end %>

  <% summary_list.row do |row| %>
    <% row.key { "Training status" } %>
    <% row.value { npq.training_status } %>
    <% row.action text: "Change", visually_hidden_text: "Change training status", href: edit_finance_participant_profile_path(@user, npq) %>  <% end %>

  <% summary_list.row do |row| %>
    <% row.key { "Schedule identifier" } %>
    <% row.value { npq.schedule&.schedule_identifier } %>
    <% row.action %>
  <% end %>

  <% summary_list.row do |row| %>
    <% row.key { "Schedule cohort" } %>
    <% row.value { npq.schedule&.cohort&.start_year&.to_s } %>
    <% row.action %>
  <% end %>

  <% summary_list.row do |row| %>
    <% row.key { "Created at" } %>
    <% row.value { npq.created_at.to_s(:govuk) } %>
    <% row.action %>
  <% end %>

  <% summary_list.row do |row| %>
    <% row.key { "Updated at" } %>
    <% row.value { npq.updated_at.to_s(:govuk) } %>
    <% row.action %>
  <% end %>
<% end %>

<h4>Declarations</h4>

<% if npq.participant_declarations.blank? %>
  No declarations have been made
<% end %>

<%= render npq.participant_declarations %>
