<% content_for :title, "Lead Providers" %>
<% content_for :before_content, govuk_back_link(text: "Back", href: finance_landing_page_path) %>

<h1 class="govuk-heading-l">ECF Lead Providers</h1>

<table class="govuk-table">
  <tbody class="govuk-table__body">
    <% @ecf_lead_providers.each do |ecf_lead_provider| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell" data-test="lead-provider-name"><%= link_to ecf_lead_provider.name, finance_ecf_payment_breakdown_path(id: ecf_lead_provider) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
