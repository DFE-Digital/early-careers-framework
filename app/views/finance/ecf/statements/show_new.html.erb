<% content_for :title, t("finance.ecf.payment_breakdown") %>
<% content_for :before_content, govuk_back_link(text: "Back", href: select_provider_ecf_finance_payment_breakdowns_path) %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'print', media: 'print' %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l"><%= t(".new_title") %></h1>

    <span class="govuk-caption-l"><%= @ecf_lead_provider.name %></span>
    <h2 class="govuk-heading-m"><%= @statement.name %></h2>

    <%= render Finance::Statements::ECFStatementSelector.new(current_statement: @statement, cohorts: Cohort.where(start_year: 2021..)) %>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="finance-panel finance-panel__summary">
      <div class="finance-panel__summary__meta">
        <div class="finance-panel__summary__meta__dates">
          <div>
            <div>
              <strong class="govuk-body-s govuk-!-margin-bottom-0">Milestone cut off date</strong>
            </div>
            <div class="govuk-heading-m govuk-!-padding-top-0">
              <%= @statement.deadline_date.to_fs(:govuk) %>
            </div>
          </div>

          <div>
            <div>
              <strong class="govuk-body-s govuk-!-margin-bottom-0">Payment date</strong>
            </div>
            <div class="govuk-heading-m govuk-!-padding-top-0">
              <%= @statement.payment_date.to_fs(:govuk) %>
            </div>
          </div>
        </div>

        <%= render Finance::Statements::PaymentBreakdown::Totals.new(calculator: @calculator, mentor_calculator: @mentor_calculator) %>
      </div>

      <div class="finance-panel__summary__meta">
        <div class="finance-panel__summary__meta__dates">
          <div>
            <div>
              <br>
            </div>
            <div class="govuk-heading-m govuk-!-padding-top-0">
              <br>
            </div>
          </div>
        </div>
        <div class="finance-panel__summary__meta__counts">
          <div class="second govuk-list govuk-!-margin-bottom-0">
            <strong class="govuk-body-s govuk-!-margin-bottom-0">ECTs started</strong>
            <div class="govuk-heading-m govuk-!-padding-top-0">
              <%= @calculator.started_count %>
            </div>
          </div>

          <div>
            <strong class="govuk-body-s govuk-!-margin-bottom-0">ECTs retained</strong>
            <div class="govuk-heading-m govuk-!-padding-top-0">
              <%= @calculator.retained_count %>
            </div>
          </div>

          <div>
            <strong class="govuk-body-s govuk-!-margin-bottom-0">ECTs completed</strong>
            <div class="govuk-heading-m govuk-!-padding-top-0">
              <%= @calculator.completed_count %>
            </div>
          </div>

          <% if !@calculator.extended_count.positive? %>
            <div>
              <strong class="govuk-body-s govuk-!-margin-bottom-0">ECTs extended</strong>
              <div class="govuk-heading-m govuk-!-padding-top-0">
                <%= @calculator.extended_count %>
              </div>
            </div>
          <% end %>

          <div>
            <strong class="govuk-body-s govuk-!-margin-bottom-0">ECTs voided</strong>

            <div class="govuk-heading-m govuk-!-padding-top-0 govuk-!-margin-bottom-0">
              <%= @calculator.voided_count %>
            </div>

            <%= govuk_link_to 'View<span class="govuk-visually-hidden"> voided declarations</span>'.html_safe, finance_ecf_payment_breakdown_statement_ect_voided_path(@ecf_lead_provider.id, @statement), class: "govuk-body-s" %>
          </div>

          <div class="second govuk-list govuk-!-margin-bottom-0">
            <strong class="govuk-body-s govuk-!-margin-bottom-0">Mentors started</strong>
            <div class="govuk-heading-m govuk-!-padding-top-0">
              <%= @mentor_calculator.started_count %>
            </div>
          </div>

          <div>
            <strong class="govuk-body-s govuk-!-margin-bottom-0">Mentors completed</strong>
            <div class="govuk-heading-m govuk-!-padding-top-0">
              <%= @mentor_calculator.completed_count %>
            </div>
          </div>

          <div>
            <strong class="govuk-body-s govuk-!-margin-bottom-0">Mentors voided</strong>

            <div class="govuk-heading-m govuk-!-padding-top-0 govuk-!-margin-bottom-0">
              <%= @mentor_calculator.voided_count %>
            </div>

            <%= govuk_link_to 'View<span class="govuk-visually-hidden"> voided declarations</span>'.html_safe, finance_ecf_payment_breakdown_statement_mentor_voided_path(@ecf_lead_provider.id, @statement), class: "govuk-body-s" %>
          </div>
        </div>
      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <div class="app-application__panel__actions">
          <div class="duvet">
            <div class="govuk-grid-column-one-half govuk-!-text-align-left">
              <% if authorise_for_payment_button_visible?(@statement) %>
                <%= button_to t("finance.statements.payment_authorisations.button"), new_finance_statement_payment_authorisation_path(@statement), method: :get, class: "govuk-button govuk-button--primary" %>
              <% elsif @statement.marked_as_paid? %>
                <%= govuk_tag(text: t("finance.statements.payment_authorisations.tag.content", statement_marked_as_paid_at: @statement.marked_as_paid_at.in_time_zone("London").strftime("%-I:%M%P on %-e %b %Y"))) %>
              <% else %>
                &nbsp;
              <% end %>
            </div>
            <div class="govuk-grid-column-one-half govuk-!-text-align-right">
              <p class="govuk-body-s">
                <%=
                  print_link("Save as PDF", filename: "#{@ecf_lead_provider.name} #{@statement.name} ECF Statement (#{@statement.cohort.start_year} Cohort)")
                %>
              </p>
              <p class="govuk-body-s">
                <%= govuk_link_to "Download declarations (CSV)", finance_ecf_statement_assurance_report_path(@statement, format: :csv) %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="govuk-grid-row govuk-!-margin-top-5 print-page-break">
  <div class="govuk-grid-column-full">
    <div class="finance-panel finance-panel__summary">
      <div class="finance-panel__summary__meta">
        <div class="finance-panel__summary__meta__dates">
          <div>
            <div>
              <strong class="govuk-body-s govuk-!-margin-bottom-0">Milestone cut off date</strong>
            </div>
            <div class="govuk-heading-m govuk-!-padding-top-0">
              <%= @statement.deadline_date.to_fs(:govuk) %>
            </div>
          </div>

          <div>
            <div>
              <strong class="govuk-body-s govuk-!-margin-bottom-0">Payment date</strong>
            </div>
            <div class="govuk-heading-m govuk-!-padding-top-0">
              <%= @statement.payment_date.to_fs(:govuk) %>
            </div>
          </div>
        </div>

        <div class="finance-panel__summary__total-payment-breakdown">
          <h4 class="govuk-heading-l govuk-!-margin-bottom-2">Total <%= number_to_pounds(@calculator.total(with_vat: true) + @mentor_calculator.total(with_vat: true)) %></h4>

          <div>
            <p class="govuk-body-s govuk-!-margin-bottom-2">
              ECTs output payment <span><%= number_to_pounds(@calculator.output_fee) %></span>
            </p>

            <p class="govuk-body-s govuk-!-margin-bottom-2">
              Mentors output payment <span><%= number_to_pounds(@mentor_calculator.output_fee) %></span>
            </p>

            <p class="govuk-body-s govuk-!-margin-bottom-2">
              Service fee <span><%= number_to_pounds(@calculator.service_fee) %></span>
            </p>

            <p class="govuk-body-s govuk-!-margin-bottom-2">
              ECT clawbacks <span><%= number_to_pounds(@calculator.adjustments_total) %></span>
            </p>

            <p class="govuk-body-s govuk-!-margin-bottom-2">
              Mentors clawbacks <span><%= number_to_pounds(@mentor_calculator.adjustments_total) %></span>
            </p>

            <p class="govuk-body-s govuk-!-margin-bottom-2">
              Additional adjustments <span><%= number_to_pounds(@calculator.additional_adjustments_total) %></span>
            </p>

            <p class="govuk-body-s govuk-!-margin-bottom-2">
              VAT <span><%= number_to_pounds(@calculator.vat + @mentor_calculator.vat) %></span>
            </p>
          </div>
        </div>
      </div>

      <div class="finance-panel__summary__meta">
        <div class="finance-panel__summary__meta__dates">
          <div>
            <div>
              <br>
            </div>
            <div class="govuk-heading-m govuk-!-padding-top-0">
              <br>
            </div>
          </div>
        </div>
        <%= govuk_table classes: ["output-payments"] do |table| %>
          <% table.with_head do |head| %>
            <% head.with_row do |row| %>
              <% row.with_cell(header: true) %>
              <% row.with_cell(header: true, text: "Started", numeric: true) %>
              <% row.with_cell(header: true, text: "Retained", numeric: true) %>
              <% row.with_cell(header: true, text: "Completed", numeric: true) %>
              <% row.with_cell(header: true, text: "Extended", numeric: true) %>
              <% row.with_cell(header: true, text: "Voided", numeric: true) %>
            <% end %>
          <% end %>
          <% table.with_body do |body| %>
            <% body.with_row do |row| %>
              <% row.with_cell(text: "ECTs", header: true) %>
              <% row.with_cell(text: @calculator.started_count, numeric: true) %>
              <% row.with_cell(text: @calculator.retained_count, numeric: true) %>
              <% row.with_cell(text: @calculator.completed_count, numeric: true) %>
              <% row.with_cell(text: @calculator.extended_count, numeric: true) %>
              <% row.with_cell(text: govuk_link_to(@calculator.voided_count, finance_ecf_payment_breakdown_statement_ect_voided_path(@ecf_lead_provider.id, @statement)), numeric: true) %>
              <% row.with_cell(text: "") %>
            <% end %>

            <% body.with_row do |row| %>
              <% row.with_cell(text: "Mentors", header: true) %>
              <% row.with_cell(text: @mentor_calculator.started_count, numeric: true) %>
              <% row.with_cell(text: "-", numeric: true) %>
              <% row.with_cell(text: @mentor_calculator.completed_count, numeric: true) %>
              <% row.with_cell(text: "-", numeric: true) %>
              <% row.with_cell(text: govuk_link_to(@mentor_calculator.voided_count, finance_ecf_payment_breakdown_statement_mentor_voided_path(@ecf_lead_provider.id, @statement)), numeric: true) %>
              <% row.with_cell(text: "") %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <div class="app-application__panel__actions">
          <div class="duvet">
            <div class="govuk-grid-column-one-half govuk-!-text-align-left">
              <% if authorise_for_payment_button_visible?(@statement) %>
                <%= button_to t("finance.statements.payment_authorisations.button"), new_finance_statement_payment_authorisation_path(@statement), method: :get, class: "govuk-button govuk-button--primary" %>
              <% elsif @statement.marked_as_paid? %>
                <%= govuk_tag(text: t("finance.statements.payment_authorisations.tag.content", statement_marked_as_paid_at: @statement.marked_as_paid_at.in_time_zone("London").strftime("%-I:%M%P on %-e %b %Y"))) %>
              <% else %>
                &nbsp;
              <% end %>
            </div>
            <div class="govuk-grid-column-one-half govuk-!-text-align-right">
              <p class="govuk-body-s">
                <%=
                  print_link("Save as PDF", filename: "#{@ecf_lead_provider.name} #{@statement.name} ECF Statement (#{@statement.cohort.start_year} Cohort)")
                %>
              </p>
              <p class="govuk-body-s">
                <%= govuk_link_to "Download declarations (CSV)", finance_ecf_statement_assurance_report_path(@statement, format: :csv) %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="govuk-grid-row govuk-!-margin-top-5 print-page-break">
  <div class="govuk-grid-column-full">
    <!-- TODO: have a think about having a partial for this and passing a variable to it to drive the new translations -->
    <div class="finance-panel finance-panel__output-payments">
      <%= govuk_table classes: ["output-payments"] do |table| %>
        <% table.with_caption(size: 'm', text: "Early career teacher (ECT) output payments") %>

        <% table.with_head do |head| %>
          <% head.with_row do |row| %>
            <% row.with_cell(header: true, text: "Outputs") %>

            <% @calculator.band_letters.each do |letter| %>
              <% row.with_cell(header: true, text: "Band #{letter.upcase}", numeric: true) %>
            <% end %>

            <% row.with_cell(header: true, text: "Payments", numeric: true) %>
          <% end %>
        <% end %>

        <% table.with_body do |body| %>
          <% @calculator.event_types_for_display.each do |event_type| %>

            <% body.with_row do |row| %>
              <% row.with_cell(text: t(".#{event_type}"), header: true) %>

              <% @calculator.band_letters.each do |letter| %>
                <% row.with_cell(text: @calculator.public_send("#{event_type}_band_#{letter}_additions"), numeric: true) %>
              <% end %>

              <% row.with_cell(text: "") %>
            <% end %>

            <% body.with_row do |row| %>
              <% row.with_cell(text: "Fee per ECT") %>

              <% @calculator.band_letters.each do |letter| %>
                <% row.with_cell(text: number_to_pounds(@calculator.public_send("#{event_type}_band_#{letter}_fee_per_declaration")), numeric: true) %>
              <% end %>

              <% row.with_cell(text: number_to_pounds(@calculator.public_send("additions_for_#{event_type}")), numeric: true) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <div class="govuk-!-text-align-right govuk-heading-s govuk-!-margin-bottom-0">
        ECTs output payment total
      </div>

      <div class="govuk-!-text-align-right govuk-heading-s">
        <%= number_to_pounds(@calculator.output_fee) %>
      </div>

      <%= govuk_table classes: ["output-payments"] do |table| %>
        <% table.with_caption(size: 'm', text: "Mentors output payments") %>

        <% table.with_head do |head| %>
          <% head.with_row do |row| %>
            <% row.with_cell(header: true, text: "Outputs") %>
            <% row.with_cell(header: true, text: "Participants", numeric: true) %>
            <% row.with_cell(header: true, text: "Payments", numeric: true) %>
          <% end %>
        <% end %>

        <% table.with_body do |body| %>
          <% @mentor_calculator.event_types_for_display.each do |event_type| %>

            <% body.with_row do |row| %>
              <% row.with_cell(text: t(".#{event_type}"), header: true) %>
              <% row.with_cell(text: @mentor_calculator.public_send("#{event_type}_count"), numeric: true) %>
              <% row.with_cell(text: "") %>
            <% end %>

            <% body.with_row do |row| %>
              <% row.with_cell(text: "Fee per participant") %>

              <% row.with_cell(text: number_to_pounds(@mentor_calculator.public_send("#{event_type}_fee_for_declaration")), numeric: true) %>

              <% row.with_cell(text: number_to_pounds(@mentor_calculator.public_send("additions_for_#{event_type}")), numeric: true) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <div class="govuk-!-text-align-right govuk-heading-s govuk-!-margin-bottom-0">
        Mentors output payment total
      </div>

      <div class="govuk-!-text-align-right govuk-heading-s">
        <%= number_to_pounds(@mentor_calculator.output_fee) %>
      </div>
    </div>

    <div class="finance-panel finance-panel__adjustments govuk-!-margin-top-5 govuk-!-margin-bottom-5 print-page-break">
      <%= govuk_table do |table| %>
        <% table.with_caption(size: "m", text: "ECTs clawbacks") %>

        <% table.with_head do |head| %>
          <% head.with_row do |row| %>
            <% row.with_cell(header: true, text: "Payment type") %>
            <% row.with_cell(header: true, text: "Number of participants") %>
            <% row.with_cell(header: true, text: "Fee per participant", numeric: true) %>
            <% row.with_cell(header: true, text: "Payments", numeric: true) %>
          <% end %>
        <% end %>

        <% table.with_body do |body| %>
          <% @calculator.send(:output_calculator).banding_breakdown.each do |hash| %>
            <% relevant_hash = hash.select { |k, v| k.match?(/_subtractions/) } %>
            <% relevant_hash = relevant_hash.transform_keys { |k| k.to_s.gsub("_subtractions", "").to_sym } %>

            <% relevant_hash.each do |name, count| %>
              <% next if count.zero? %>

              <% body.with_row do |row| %>
                <% fee = @calculator.fee_for_declaration(band_letter: hash[:band], type: name) %>

                <% row.with_cell(text: "Clawback for #{name.to_s.humanize} (Band: #{hash[:band].to_s.upcase})") %>
                <% row.with_cell(text: count) %>
                <% row.with_cell(text: number_to_pounds(-fee)) %>
                <% row.with_cell(text: number_to_pounds(-count * fee), numeric: true) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <div class="govuk-!-text-align-right govuk-heading-s govuk-!-margin-bottom-0">
        Total
      </div>

      <div class="govuk-!-text-align-right govuk-heading-s">
        <%= number_to_pounds(@calculator.adjustments_total) %>
      </div>
    </div>

    <div class="finance-panel finance-panel__adjustments govuk-!-margin-top-5 govuk-!-margin-bottom-5 print-page-break">
      <%= govuk_table do |table| %>
        <% table.with_caption(size: "m", text: "Mentors clawbacks") %>

        <% table.with_head do |head| %>
          <% head.with_row do |row| %>
            <% row.with_cell(header: true, text: "Payment type") %>
            <% row.with_cell(header: true, text: "Number of participants") %>
            <% row.with_cell(header: true, text: "Fee per participant", numeric: true) %>
            <% row.with_cell(header: true, text: "Payments", numeric: true) %>
          <% end %>
        <% end %>

        <% table.with_body do |body| %>
          <% @mentor_calculator.send(:output_calculator).output_breakdown.each do |hash| %>
            <% relevant_hash = hash.select { |k, v| k.match?(/_subtractions/) } %>
            <% relevant_hash = relevant_hash.transform_keys { |k| k.to_s.gsub("_subtractions", "").to_sym } %>

            <% relevant_hash.each do |name, count| %>
              <% next if count.zero? %>

              <% body.with_row do |row| %>
                <% fee = @mentor_calculator.fee_for_declaration(type: name) %>

                <% row.with_cell(text: "Clawback for #{name.to_s.humanize}") %>
                <% row.with_cell(text: count) %>
                <% row.with_cell(text: number_to_pounds(-fee)) %>
                <% row.with_cell(text: number_to_pounds(-count * fee), numeric: true) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <div class="govuk-!-text-align-right govuk-heading-s govuk-!-margin-bottom-0">
        Total
      </div>

      <div class="govuk-!-text-align-right govuk-heading-s">
        <%= number_to_pounds(@mentor_calculator.adjustments_total) %>
      </div>
    </div>

    <%= render Finance::Statements::AdditionalAdjustments::Table.new(statement: @statement) %>

    <details class="govuk-details contract-information" data-module="govuk-details">
      <%= render Finance::ECT::Contract.new(contract: @calculator.contract) %>
      <%= render Finance::Mentor::Contract.new(contract: @mentor_calculator.contract) %>
    </details>
  </div>

  <%= render partial: "finance/statements/calculation_rounding_message" %>
  <%= render partial: "finance/statements/updated_designs_message" %>
</div>
