<% content_for :before_content, govuk_back_link(text: "Back", href: new_user_session_path) %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
  <%= form_with url: registrations_question_one_path, method: :post do |f| %>
    <%= f.govuk_collection_radio_buttons(
          :answer, @options, :id, :name,
          legend: -> { tag.h1("Do you think you'll be training any early career teachers in the 2021/22 academic year?" , class: "govuk-heading-l") }
        ) %>
    <%= f.govuk_submit "Continue" %>
  <% end %>
  </div>
</div>

