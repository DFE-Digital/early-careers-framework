<% content_for :before_content, govuk_back_link(text: "Back", href: registrations_question_two_path) %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-l">
      <label for="school-profile-form-urn-field">What is your school Unique Reference Number (URN)?</label>
    </h2>
    <%= form_with(model: @school_profile_form, url: registrations_school_profile_path) do |f| %>
      <%= f.govuk_error_summary %>
      <p class="govuk-hint">
        This is a 6 digit number. Not sure? <a target='_blank' href='https://www.get-information-schools.service.gov.uk/'>Search for your school</a> on our register.
      </p>
      <%= f.govuk_text_field(:urn, width: 20, label:  nil, link_errors: true) %>
      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
