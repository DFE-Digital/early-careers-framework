<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
  <% content_for :before_content, govuk_back_link(text: "Back", href: registrations_question_one_path) %>
  <%= form_with url: registrations_question_two_path, method: :post do |f| %>
    <%= f.govuk_collection_radio_buttons(
          :answer, @options, :id, :name,
          legend: -> { tag.h1("Do you know how you want to run your induction programme?" , class: "govuk-heading-l") }
        ) %>
    <%= f.govuk_submit "Continue" %>
  <% end %>
  </div>
</div>

