<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-l">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: users_register_path) do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_email_field :email, autocomplete: "email", value: @email, readonly: true %>

      <%= f.govuk_text_field :school_name, label: { text: "School name" }, value: @school.name, readonly: true %>

      <%= f.hidden_field :school_id, value: @school.id %>

      <%= f.govuk_text_field :full_name, label: { text: "Full name" } %>

      <%= f.govuk_submit "Sign up" %>
    <% end %>

  </div>
</div>
