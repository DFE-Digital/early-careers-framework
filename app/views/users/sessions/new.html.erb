<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-l">Sign in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="govuk-form-group">
        <%= f.govuk_email_field :email, label: { text: "Email address" } %>
      </div>

      <%= f.govuk_submit "Sign in" %>
    <% end %>

    <%= govuk_link_to "Register your school", users_information_path %>
    <br/>
    <h2 class="govuk-heading-s">Problems signing in</h2>
    <p>Contact us: <%= mail_to "ecf-support@digital.education.gov.uk" %> </p>
  </div>
</div>
