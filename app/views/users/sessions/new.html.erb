<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Sign in with your email address</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="govuk-form-group">
        <%= f.govuk_email_field :email, label: { text: "Email", hidden: true } %>
      </div>

      <%= f.govuk_submit "Sign in" %>
    <% end %>

    <%= govuk_link_to "Register your school", users_information_path %>
  </div>
</div>
