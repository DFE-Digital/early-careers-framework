<% content_for :title, "Sign in" %>
<% content_for :before_content, govuk_back_link(
  text: "Back",
  href: root_path)
%>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">Sign in</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="govuk-form-group">
        <%= f.govuk_email_field :email, label: { text: "Email address" } %>
      </div>

      <%= f.govuk_submit "Sign in" %>
    <% end %>
    <p class="govuk-!-margin-bottom-0 govuk-!-margin-top-15"><strong>Problems signing in</strong></p>
    <ul>
      <li><%= govuk_link_to "check if you have an account", check_account_path %></li>
      <li>contact us: <%= render MailToSupportComponent.new %></li>
    </ul>
  </div>
</div>
