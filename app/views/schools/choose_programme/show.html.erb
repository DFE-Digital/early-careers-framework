<% content_for :title, "Choose your programme" %>
<% content_for :before_content, govuk_back_link(
  text: "Back",
  href: advisory_schools_choose_programme_path)
%>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @induction_choice_form, url: schools_choose_programme_path, method: :post do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_collection_radio_buttons(
            :programme_choice,
            @induction_choice_form.programme_choices,
            :id,
            :name,
            legend: { text: "How do you want to run your #{@induction_choice_form.cohort.academic_year} induction for early career teachers?", size: "l", tag: "h1" },
            hint: -> { tag.p do
              concat("Not sure? ")
              concat(govuk_link_to("Check our guidance", "https://www.gov.uk/government/publications/early-career-framework-reforms-overview/early-career-framework-reforms-overview"))
              concat(", contact your ")
              concat(govuk_link_to("local Teaching School Hub", "https://www.gov.uk/guidance/teaching-school-hubs#find-a-teaching-school-hub"))
              concat(" or appropriate body.")
            end }
          ) %>
      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
