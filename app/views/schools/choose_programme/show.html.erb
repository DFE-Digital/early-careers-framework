<% content_for :title, "Choose Programme" %>
<% content_for :before_content, govuk_back_link(
  text: "Back",
  href: advisory_schools_choose_programme_path)
%>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @induction_choice_form, url: schools_choose_programme_path, method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons(
            :programme_choice,
            @induction_choice_form.programme_choices,
            :id,
            :name,
            legend: { text: "How do you want to run your induction programme this year?", size: "l", tag: "h1" },
            hint: -> { tag.p do
              concat(govuk_link_to("See our guidance on programmes", "https://www.gov.uk/government/publications/early-career-framework-reforms-overview/early-career-framework-reforms-overview"))
              concat(" if youâ€™re not sure.")
            end }
          ) %>
      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
