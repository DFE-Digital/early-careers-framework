<% title = "Whatâ€™s #{@wizard.possessive_name} date of birth?" %>

<% content_for :title, title %>

<% content_for :before_content, govuk_back_link(text: "Back", href: @wizard.previous_step_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <span class="govuk-caption-xl"><%= @school.name %></span>

    <%= form_with model: @form, url: add_participant_wizard_update_schools_participants_path, scope: "add_participant_wizard", method: :put do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_date_field :date_of_birth,
        date_of_birth: true,
        width: "three-quarters",
        legend: { text: title, tag: "h1", size: "xl" },
        hint: { text: "For example, 14 7 1990" } %>

      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
