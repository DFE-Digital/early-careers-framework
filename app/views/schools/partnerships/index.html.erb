<% if @partnership %>
<% content_for :title, "Signed up with provider" %>
<% else %>
<% content_for :title, "Confirm with provider" %>
<% end %>

<% content_for :before_content, govuk_back_link(text: "Back", href: schools_dashboard_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-xl"><%= @cohort.display_name %></span>
    <% if @partnership %>
    <%= render partial: "signed_up_with_provider" %>
    <% else %>
    <%= render partial: "confirm_with_provider" %>
    <% end %>
  </div>
</div>
