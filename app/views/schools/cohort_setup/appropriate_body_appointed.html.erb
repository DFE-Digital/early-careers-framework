<% title = "Have you appointed an appropriate body?" %>
<% content_for :title, title %>

<% content_for :before_content, govuk_back_link(text: "Back", href: wizard_back_link_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @wizard.form, url: url_for(action: :update), scope: @wizard.to_key, method: :put do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_collection_radio_buttons(
        :appropriate_body_appointed,
        @wizard.form.body_appointed_choices,
        :id, :name,
        legend: { text: title, tag: :h1, size: 'l' },
        caption: { text: @school.name, size: 'l' }) do %>

        <p class="govuk-body">
          An ECT cannot start their induction until youâ€™ve appointed an
          <a class="govuk-link" target="_blank" href="https://www.gov.uk/government/publications/statutory-teacher-induction-appropriate-bodies/find-an-appropriate-body">appropriate
            body</a>.
          The appropriate body must first verify their role is suitable for induction.
        </p>
      <% end %>

      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
