<% body_type = @setup_school_cohort_form.attributes[:appropriate_body_type] %>

<% title = "Which **local authority** have you appointed? #{body_type}" %>
<% content_for :title, title %>

<% content_for :before_content, govuk_back_link(text: "Back", href: "TODO") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-xl"><%= @school.name %></span>
    <h1 class="govuk-heading-xl"><%= title %></h1>

    <%= form_for @setup_school_cohort_form, url: { action: :appropriate_body_type }, method: :put do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_collection_select(:appropriate_body,
                                    @setup_school_cohort_form.appropriate_body_choices(body_type),
                                    :id,
                                    :name) %>

      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
