<% registration_cohort = TabLabelDecorator.new(Cohort.active_registration_cohort.description) %>
<% title = "How will you run training for new starters in the #{registration_cohort} acadamic year?" %>

<% content_for :title, title %>

<% content_for :before_content, govuk_back_link(text: "Back", href: schools_dashboard_path(@school)) %>

<span class="govuk-caption-xl"><%= @school.name %></span>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= form_for @setup_school_cohort_form, url: { action: :how_will_you_run_training }, method: :put do |f| %>

      <%= f.govuk_error_summary %>

      <%= f.govuk_collection_radio_buttons(
        :how_will_you_run_training_choice,
        @setup_school_cohort_form.how_will_you_run_training_choices,
        :id, :name,
        legend: { text: title, tag: 'h1', size: 'xl' }) do %>

        <p class="govuk-body">This choice will only apply for ECTs and mentors starting in the <%= registration_cohort %> academic year.</p>
        <p class="govuk-body">Read our guidance to <a href="#">check your options</a>.</p>

      <% end %>

      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
