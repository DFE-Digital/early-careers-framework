<% content_for :title, t('page_titles.schools.participants.reason_to_edit_name', name: @profile.full_name) %>

<% content_for :before_content, govuk_back_link(text: "Back", href: schools_participant_path(id: @profile)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-xl"><%= @school.name %></span>

    <%= form_with url: schools_participant_edit_name_path(participant_id: @profile), method: :get do |f| %>
      <%= f.govuk_collection_radio_buttons(
            :reason,
            edit_name_reasons,
            :id,
            :name,
            legend: {
              text: t('page_titles.schools.participants.reason_to_edit_name', name: @profile.full_name),
              size: "xl",
              tag: "h1"
            }
          ) %>
      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
