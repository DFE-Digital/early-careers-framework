<p class="govuk-body">
  Sort by:
  <%= govuk_link_to("Mentor (A-Z)",
                    school_participants_path(school, sorted_by: :mentor),
                    no_visited_state: true,
                    class: "govuk-!-margin-left-2") %>

  <b class="govuk-!-margin-left-2">Induction start date</b>
</p>

<% participants.ects.each do |ect| %>
  <%= govuk_summary_card(title: link_to_participant(ect.participant_profile, school)) do |card|
    card.with_summary_list(
        rows: [
            { key: {
                text: "Status",
                classes: ["xgovuk-!-font-weight-regular"],
            },
              value: {
                  text: render(StatusTags::SchoolParticipantStatusTag.new(
                      participant_profile: ect.participant_profile,
                      induction_record: ect.induction_record,
                      display_description: false,
                      display_induction_start_date: true)),
              },
            },
            { key: {
                text: "Mentor",
                classes: ["xgovuk-!-font-weight-regular"],
            },
              value: {
                  text: (
                      if ect.mentored?
                        link_to_participant(ect.mentor, school)
                      else
                        missing_mentor_html(ect.participant_profile)
                      end),
              },
            },
        ],
        classes: ["govuk-summary-list--no-border", "govuk-!-margin-bottom-0"])
  end %>
<% end %>
