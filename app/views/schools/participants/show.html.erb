  template = @profile.mentor? ? "schools/participants/mentor/show" : "schools/participants/ect/show"

  render(template,
         profile: @profile,
         mentor_profile: @mentor_profile,
         school: @school,
         induction_record: @induction_record,
         ects: @ects,
         mentors_added: @mentors_added,
         possible_ects: @possible_ects)
%>
