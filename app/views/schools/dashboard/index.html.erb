<%= content_for :title, "Manage your schools" %>

<h1 class="govuk-heading-xl">Manage your schools</h1>

<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header" scope="col">Name</th>
      <th class="govuk-table__header govuk-table__header--numeric" scope="col">URN</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <% @schools.each do |school| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell">
          <%= govuk_link_to school.name, schools_dashboard_path(school_id: school.slug) %>
        </td>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          <%= school.urn %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== govuk_pagination(pagy: @pagy) %>
