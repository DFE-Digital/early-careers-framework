<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l govuk-!-margin-bottom-3">How many early career teachers and mentors do you expect to have in your programme this year?</h1>
    <p class="govuk-body">These can be rough estimates.</p>

    <%= form_with(model: @school_cohort_form, url: schools_estimate_participant_path(@school_cohort), method: :patch) do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_text_field(
          :estimated_teacher_count,
          width: 20,
          label: {
            text: "Number of ECTs",
            size: "m",
          }
      ) %>

      <%= f.govuk_text_field(
          :estimated_mentor_count,
          width: 20,
          label: {
            text: "Number of mentors",
            size: "m",
          }
      ) %>

      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>