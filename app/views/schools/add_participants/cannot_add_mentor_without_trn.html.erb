<% title = "You cannot add #{@wizard.sit_mentor? ? "yourself" : @wizard.full_name}" %>
<% content_for :title, title %>

<% content_for :before_content, govuk_back_link(text: "Back", href: wizard_back_link_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-l"><%= @school.name %></span>
    <h1 class="govuk-heading-l">
      <%= title %> without <%= @wizard.sit_mentor? ? "your" : "their" %> TRN
    </h1>

    <p class="govuk-body">If <%= @wizard.sit_mentor? ? "you" : "they" %>:</p>
    <ul class="govuk-list govuk-list--bullet">
      <li>had a TRN but cannot find it, <%= "ask them to" unless @wizard.sit_mentor? %> use the
        <%= govuk_link_to "find a lost TRN service (opens in new tab)",
                          "https://find-a-lost-trn.education.gov.uk/start",
                          target: :_blank,
                          no_visited_state: true %>
      </li>
      <li>have never had one, <%= @wizard.sit_mentor? ? "you" : "they" %>â€™ll need to
        <%= govuk_link_to "get a TRN (opens in new tab)",
                          "https://www.gov.uk/guidance/teacher-reference-number-trn#request-a-trn",
                          target: :_blank,
                          no_visited_state: true %>
      </li>
    </ul>

    <p class="govuk-body"><%= govuk_link_to "Return to your ECTs", school_early_career_teachers_path, no_visited_state: true %></p>
    <p class="govuk-body"><%= govuk_link_to "Return to your mentors", school_mentors_path, no_visited_state: true %></p>
  </div>
</div>
