<% content_for :title, "ECT or mentor added" %>

<% if participant_profile.user == current_user %>
  <%= govuk_panel title_text: "You’ve been added to the #{@cohort.display_name} cohort", text: nil, classes: "govuk-!-margin-bottom-8" %>

  <h2 class="govuk-heading-m">What happens next</h2>
  <ul class="govuk-list govuk-list--bullet">
    <li>we’ll contact you if we need any more details, and update you on your status</li>
  </ul>

<% else %>
  <%= govuk_panel title_text: "You’ve added #{participant_profile.user.full_name} to the #{@cohort.display_name} cohort", text: nil, classes: "govuk-!-margin-bottom-8" %>

  <h2 class="govuk-heading-m">What happens next</h2>
  <ul class="govuk-list govuk-list--bullet">
    <li>we’ll contact them to ask for information needed to check they’re eligible for this training</li>
    <li>we’ll let you know if they’re not eligible, or if we need any further information</li>
    <li>you can track the status of these checks by <%= govuk_link_to "viewing your ECTs and mentors", schools_participants_path %> </li>
  </ul>
<% end %>

<div class="govuk-button-group">
  <%= govuk_button_link_to "Add a new ECT or mentor", add_schools_participants_path %>
  <%= govuk_link_to "View your ECTs and mentors", schools_participants_path %>
</div>
