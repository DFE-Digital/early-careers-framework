<% content_for :title, "You need to setup #{@target_cohort_start_year}/#{@target_cohort_start_year + 1} cohort at your school to transfer #{add_participant_form.full_name.titleize} into it." %>

<% content_for :before_content, govuk_back_link( text: "Back", href: back_link_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-xl"><%= @school.name %></span>
    <h1 class="govuk-heading-xl">
      <%= "You need to setup #{@target_cohort_start_year}/#{@target_cohort_start_year + 1} cohort at your school to transfer #{add_participant_form.full_name.titleize} into it." %>
    </h1>

    <p class="govuk-body"></p>

    <%= govuk_button_link_to "Set cohort #{@target_cohort_start_year}/#{@target_cohort_start_year + 1}",
                             schools_choose_programme_path(cohort_id: @target_cohort_start_year) %>
  </div>
</div>
