<% content_for :before_content, govuk_back_link(text: "Back", href: schools_participants_path) %>

<% content_for :title, "Who do you want to add?" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <span class="govuk-caption-xl"><%= @school.name %></span>

    <%= form_with model: @form, url: chosen_who_to_add_start_schools_participants_path, scope: "who_to_add_form", method: :post do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_radio_buttons_fieldset :participant_type , legend: { text: "Who do you want to add?", tag: 'h1', size: 'xl' } do %>
        <p class="govuk-body govuk-!-margin-top-4">
          This could be a new teacher or a teacher transferring from another school where theyâ€™ve started ECF-based training or mentoring.
        </p>
        <%= f.govuk_radio_button :participant_type, :ect, label: { text: "ECT" } %>
        <%= f.govuk_radio_button :participant_type, :mentor, label: { text: "Mentor" } %>
      <% end %>
      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
