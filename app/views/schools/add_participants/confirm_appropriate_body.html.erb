<% title = "Is this the appropriate body for #{add_participant_form.display_name} induction?" %>

<% content_for :title, title %>

<% content_for :before_content, govuk_back_link(text: "Back", href: back_link_path) %>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-xl"><%= @school.name %></span>
      <h1 class="govuk-heading-xl"><%= title %></h1>

      <%= govuk_inset_text(text: add_participant_form.school_cohort_appropriate_body.name) %>

      <%= govuk_link_to "They have a different appropriate body", url_for({ action: :change_appropriate_body }) %>

      <%= form_for add_participant_form, url: { action: :update }, method: :patch do |f| %>
      <%= f.govuk_error_summary %>
        <%= f.hidden_field :appropriate_body_confirmed, value: true %>
        <%= f.govuk_submit "Confirm", classes: "govuk-!-margin-top-6" %>
      <% end %>

    </div>
</div>
