<% title = "You cannot add #{@wizard.full_name}" %>
<% content_for :title, title %>

<% content_for :before_content, govuk_back_link( text: "Back", href: wizard_back_link_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-l"><%= @school.name %></span>
    <h1 class="govuk-heading-l"><%= title %></h1>

    <p class="govuk-body">
      <%= @wizard.full_name %> can mentor ECTs at multiple schools but our service does not currently support this.
    </p>

    <p class="govuk-body">Contact us for help to register this mentor at your school: <%= render MailToSupportComponent.new %></p>

    <p class="govuk-body"><%= govuk_link_to "Return to your ECTs", school_early_career_teachers_path, no_visited_state: true %></p>
    <p class="govuk-body"><%= govuk_link_to "Return to your mentors", school_mentors_path, no_visited_state: true %></p>
  </div>
</div>
