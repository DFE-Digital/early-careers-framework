<% title = "What’s #{add_participant_form.full_name.titleize}’s induction start date?" %>

<% content_for :title, title %>

<% content_for :before_content, govuk_back_link(text: "Back", href: back_link_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-xl"><%= @school.name %></span>
    <%= form_for add_participant_form, url: { action: :update }, method: :patch do |f| %>

      <%= f.govuk_error_summary %>

      <%= f.govuk_date_field :start_date,
        width: "three-quarters",
        legend: { text: title, tag: "h1", size: "xl" },
        hint: { text: "For example, 14 7 2023", class: "govuk-hint govuk-!-margin-top-6"} %>

      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
