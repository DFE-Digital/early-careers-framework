<% content_for :before_content, govuk_back_link(text: "Back", href: schools_participants_path) %>

<% content_for :title, "Who do you want to add?" %>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">Who do you want to add?</h1>

    <%= form_for add_participant_form, url: { action: :start }, method: :get do |f| %>
      <%= f.govuk_radio_buttons_fieldset :type , legend: { text: "Who do you want to add?", class: "govuk-visually-hidden" } do %>
          <% if @school_cohort.school_chose_fip? %>
            <%= f.govuk_radio_button :type, :joining, label: { text: "A teacher transferring from another school where theyâ€™ve started ECF-based training or mentoring" } %>
          <% end %>
          <%= f.govuk_radio_button :type, :ect, label: { text: "A new ECT" } %>
          <%= f.govuk_radio_button :type, :mentor, label: { text: "A new mentor" } %>
        <% end %>
      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
