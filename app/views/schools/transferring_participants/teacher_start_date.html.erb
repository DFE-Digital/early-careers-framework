<% title = "Whatâ€™s #{possessive_name(@transferring_participant_form.full_name)} start date at your school?" %>
<% content_for :title, title %>
<% content_for :before_content, govuk_back_link(text: "Back", href: { action:  @transferring_participant_form.previous_step }) %>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <%= form_for @transferring_participant_form, url: { action: :teacher_start_date }, method: :put do |f| %>
            <%= f.govuk_date_field :start_date,
                start_date: true,
                width: "two-thirds",
                legend: { text: title, tag: :h1, size: 'xl' },
                caption: { text: @school.name, tag: :h1, size: 'xl' },
                hint: { text: "For example, 14 7 2023"}
            %>
            <%= f.govuk_submit "Continue" %>
        <% end %>

    </div>
</div>
