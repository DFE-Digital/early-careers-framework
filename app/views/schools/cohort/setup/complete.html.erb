<% title = "Youâ€™ve submitted your training information" %>
<% title += " and reported your appropriate body" if @wizard.appropriate_body_appointed? %>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <%= govuk_panel title_text: title, classes: "govuk-!-margin-bottom-7" do %>
            Academic year
            <br/>
            <strong><%= @wizard.what_changes.present? ? @cohort.description : Cohort.active_registration_cohort.description %></strong>
        <% end %>

        <% if @wizard.what_changes.present? %>
            <%= render partial: @wizard.what_changes + "_submitted" %>
        <% else %>
            <%= render training_confirmation_template(@wizard.how_will_you_run_training || :full_induction_programme) %>
        <% end %>

        <%= govuk_link_to "Return to manage your training", schools_dashboard_path, no_visited_state: true %>
    </div>
</div>
