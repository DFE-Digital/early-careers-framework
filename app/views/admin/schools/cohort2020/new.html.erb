<% content_for :before_content, govuk_back_link(text: "Back", href: admin_school_cohort2020_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">Enter NQT+1 details</h1>
    <%= form_with(model: @user, url: admin_school_cohort2020_path, method: :post) do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_text_field(
            :full_name,
            label: { text: "Full name" })
      %>
      <%= f.govuk_email_field(
            :email,
            label: { text: "Email" })
      %>
      <%= f.govuk_submit "Save" %>
    <% end %>
  </div>
</div>
