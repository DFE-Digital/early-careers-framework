<% content_for :before_content, govuk_back_link(text: "Back", href: admin_induction_coordinators_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Edit user details</h1>
    <%= form_for(@induction_coordinator, url: admin_induction_coordinator_path(@induction_coordinator)) do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_text_field(
            :full_name,
            label: { text: "Full name" })
      %>
      <%= f.govuk_email_field(
            :email,
            label: { text: "Email" })
      %>
      <%= f.govuk_submit "Save" %>
    <% end %>
  </div>
</div>
