<% content_for :title, "New NPQ Applications Export" %>
<% content_for :before_content, govuk_back_link(text: "Back", href: :back) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl">New NPQ Applications Export</h1>

    <div class="admin-search-box">
      <%= form_for(@export_form, url: admin_npq_applications_exports_path) do |f| %>
        <%= f.govuk_error_summary %>

        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            <%= f.govuk_date_field :start_date,
                                   legend: { text: "Export Start Date", size: "s" } %>
          </div>
        </div>

        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            <%= f.govuk_date_field :end_date,
                                   legend: { text: "Export End Date", size: "s" } %>
          </div>
        </div>

        <%= f.govuk_submit "Schedule Export" %>
      <% end %>
    </div>
  </div>
</div>
