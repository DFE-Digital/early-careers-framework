<% content_for :title, "NPQ Application Exports" %>

<%= govuk_button_link_to "Schedule an Export", new_admin_npq_applications_export_path %>

<table class="govuk-table">
  <thead>
  <tr class="govuk-table__row">
    <th scope="col" class="govuk-table__header">Start Date</th>
    <th scope="col" class="govuk-table__header">End Date</th>
    <th scope="col" class="govuk-table__header">Scheduled</th>
  </tr>
  </thead>
  <tbody class="govuk-table__body">
  <% if @exports.none? %>
    <tr class="govuk-table__row">
      <td class="govuk-table__cell govuk-!-text-align-centre" colspan="5">No Exports found</td>
    </tr>
  <% else %>
    <% @exports.each do |export| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell"><%= export.start_date.to_s(:govuk) %></td>
        <td class="govuk-table__cell"><%= export.end_date.to_s(:govuk) %></td>
        <td class="govuk-table__cell"><%= export.created_at.to_s(:govuk) %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
<%== govuk_paginate @exports, @pagy %>
