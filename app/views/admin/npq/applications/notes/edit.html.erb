<h1><%= @npq_application.user.full_name %></h1>

<% content_for :title, "Application notes" %>
<% content_for :before_content, govuk_back_link(text: "Back", href: admin_npq_applications_edge_case_path(@npq_application)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @npq_application, url: admin_npq_applications_note_path(@npq_application), method: 'PATCH' do |f| %>

      <%= f.govuk_text_area(
            :notes,
            value: @npq_application.notes,
            rows: 10,
            width: "three-quarters",
            label: { text: "Notes", tag: "h1", size: "l" },
            hint: { text: "Give details about any changes made to this NPQ Application. Notes are for internal use only" }
            ) %>

      <%= f.submit "Save", class: "govuk-button" %>
    <% end %>
  </div>
</div>
