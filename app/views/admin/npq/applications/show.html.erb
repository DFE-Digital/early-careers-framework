<% content_for :before_content do %>
  <%= render GovukComponent::BackLinkComponent.new(
    text: "Back",
    href: url_for(:back)
  ) %>
<% end %>

<h1 class="govuk-heading-l"><%= title ||= t(".title") %></h1>

<%= govuk_tabs(title: t(".tabs")) do |c| %>
  <%= c.tab(label: t(".details")) do %>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <%= render "application_details", application: @application %>
        <%= render "employment_details", application: @application %>
        <%= render "funding_eligibility", application: @application %>
        <%= render "teacher_profile_details", teacher_profile: @application.profile.try(:teacher_profile) %>
      </div>
    </div>
  <% end %>
<% end %>
