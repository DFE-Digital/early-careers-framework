<h1>Non-school NPQ applicants</h1>

<%=
  govuk_table do |table|
    table.head do |head|
      head.row do |row|
        row.cell(header: true, text: "Name")
        row.cell(header: true, text: "Employer name")
        row.cell(header: true, text: "NPQ course name")
      end
    end

    table.body do |body|
      @npq_applications.each do |na|
        body.row do |row|
          row.cell(text: govuk_link_to(na.user.full_name, admin_npq_applications_non_school_registrant_path(na)))
          row.cell(text: na.employer_name)
          row.cell(text: na.npq_course.name)
        end
      end
    end
  end
%>
