<%= content_for :before_content, govuk_breadcrumbs(breadcrumbs: {
  "Admin Profiles" => admin_admin_profiles_path,
  "Delete Admin Profile" => nil
}) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-m govuk-!-margin-bottom-2">
      Delete Admin Profile
    </h1>

    <dl class="govuk-summary-list">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Name
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @admin_profile.user.full_name %>
        </dd>
      </div>

      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Email
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @admin_profile.user.email %>
        </dd>
      </div>

      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Delete Profile
        </dt>
        <dd class="govuk-summary-list__value">
          <%= govuk_link_to "Delete", admin_admin_profile_path(@admin_profile.id), button: true, action_name: :delete %>
        </dd>
      </div>

    </dl>
  </div>
</div>
