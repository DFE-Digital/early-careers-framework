<%= render TabsComponent.new do |c| %>
  <%= c.tab(path: admin_admin_profiles_path) do %>
    Admin Profiles
  <% end %>
  <%= c.tab(path: admin_induction_coordinator_profiles_path) do %>
    Induction Coordinators Profiles
  <% end %>
  <%= c.tab(path: admin_lead_provider_profiles_path) do %>
    Lead Providers Profiles
  <% end %>
<% end %>

<table class="govuk-table">
  <thead>
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Full Name</th>
      <th scope="col" class="govuk-table__header">Email</th>
      <th scope="col" class="govuk-table__header">Delete</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <% @lead_provider_profiles.each do |lead_provider_profile| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell"><%= lead_provider_profile.user.full_name %></td>
        <td class="govuk-table__cell"><%= lead_provider_profile.user.email %></td>
        <td class="govuk-table__cell"><%= govuk_link_to "Delete User", admin_lead_provider_profile_path(lead_provider_profile.id), button: true, class: 'govuk-button--warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= govuk_paginate @lead_provider_profiles %>

