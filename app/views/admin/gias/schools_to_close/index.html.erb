<% content_for :title, "School closures" %>
<% content_for :before_content, govuk_back_link(text: "Back", href: admin_gias_home_index_path) %>

<h1 class="govuk-heading-xl">Schools to close</h1>

<% if @schools_to_close.any? %>
  <table class="govuk-table govuk-!-margin-bottom-8">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">URN</th>
        <th scope="col" class="govuk-table__header">Name</th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      <% @schools_to_close.each do |school| %>
        <tr class="govuk-table__row">
          <td class="govuk-table__cell">
            <%= govuk_link_to admin_gias_schools_to_close_path(id: school.urn) do %>
              <span class="govuk-visually-hidden">View details of closed school </span><%= school.urn %>
            <% end %>
          </td>
          <td class="govuk-table__cell">
            <%= school.name %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="govuk-body">No new closures</p>
<% end %>
