<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for(@email_form, url: admin_participant_npq_change_email_path(@participant_profile), method: "put") do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_email_field(
        :email,
        label: { text: "Change #{@participant_profile.user.full_name}'s email address", tag: "h1", size: "l" },
        autocomplete: "off",
      ) %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
