<% title = "What is the name #{@validation_data_form.participant_name} has registered with the TRA?" %>
<% content_for :title, title %>
<% content_for :before_content, govuk_back_link( text: "Back", href: admin_participant_path(id: @participant_profile)) %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @validation_data_form, url: { action: :full_name }, method: :put do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_text_field :full_name,
        width: "two-thirds",
        label: { text: title, size: "xl", tag: "h1" },
        caption: { text: "Validate", size: "xl" },
        hint: { text: "The name registered with the Teaching Regulation Agency (TRA) might be different from the name used somewhere else in the service" }
      %>
      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
