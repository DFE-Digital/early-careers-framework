<% title = "What is #{possessive_name(@validation_data_form.participant_name)} National Insurance number?" %>
<% content_for :title, title %>
<% content_for :before_content, govuk_back_link( text: "Back", href: admin_participant_path(id: @participant_profile)) %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @validation_data_form, url: { action: :nino }, method: :put do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_text_field :nino,
        width: "two-thirds",
        label: { text: title, size: "xl", tag: "h1" },
        caption: { text: "Validate", size: "xl" },
        hint: { text: "For example, QQ 12 34 56 C" }
      %>
      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
