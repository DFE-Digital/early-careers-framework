<% title = "What is #{possessive_name(@validation_data_form.participant_name)} teacher reference number (TRN)?" %>
<% content_for :title, title %>
<% content_for :before_content, govuk_back_link( text: "Back", href: admin_participant_path(id: @participant_profile)) %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @validation_data_form, url: { action: :trn }, method: :put do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_text_field :trn,
        width: "two-thirds",
        label: { text: title, size: "l", tag: "h1" },
        caption: { text: "Validate", size: "l" }
      %>
      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
