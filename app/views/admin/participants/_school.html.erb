<%= govuk_summary_list(actions: true) do |sl|
  sl.row do |row|
    row.key(text: "School name")
    row.value do
      govuk_link_to(
        presenter.school_name,
        admin_school_path(presenter.school_friendly_id)
      )
    end
  end

  sl.row do |row|
    row.key(text: "School URN")
    row.value(text: presenter.school_urn)
  end

  if presenter.ect?
    sl.row do |row|
      row.key(text: "Mentor")
      row.value(text: presenter.mentor_full_name)
    end
  end

  sl.row do |row|
    row.key(text: "Lead provider")
    row.value(text: presenter.lead_provider_name)
    row.action(text: "Challenge", visually_hidden_text: "lead provider", href: "#") if presenter.lead_provider.present?
  end

  sl.row do |row|
    row.key(text: "Delivery partner")
    row.value(text: presenter.delivery_partner_name)
  end
end %>
