<%= govuk_warning_text do %>
  This is a temporary tab intended to help debug the multiple cohort problems.
<% end %>

<%= govuk_summary_list do |sl|
  sl.with_row do |row|
    row.with_key(text: "Cohort (via induction record)")
    row.with_value(text: latest_induction_record&.cohort&.start_year)
  end

  sl.with_row do |row|
    row.with_key(text: "Cohort (via schedule)")
    row.with_value(text: latest_induction_record&.schedule&.cohort&.start_year)
  end
end %>

<% if policy(@participant_profile).edit_cohort? %>
  <%= govuk_button_link_to("Change cohort", edit_admin_participant_change_cohort_path(latest_induction_record.participant_profile), secondary: true) %>
<% end %>
