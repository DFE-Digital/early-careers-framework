<% content_for :title, "Admin CPD lead provider management"  %>

<h2 class="govuk-heading-l">Manage CPD Lead providers</h2>

<div class="govuk-inset-text">
  Select a CPD lead providers
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for choose_provider_form, url: admin_choose_provider_path do |f| %>
      <%= f.govuk_error_summary %>
      <h1 class="govuk-heading-xl">Choose provider</h1>
      <%= f.govuk_collection_radio_buttons(
        :id,
        @providers,
        :id,
        :name,
        legend: { hidden: true },
      ) %>
      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
