<% content_for :title, "Add partner" %>
<% content_for :before_content, govuk_back_link(text: "Back", href: admin_suppliers_path) %>

<%= form_with model: @delivery_partner_form, url: choose_name_admin_delivery_partners_path, method: :post do |f| %>
  <%= f.govuk_text_field(
        :name,
        width: "three-quarters",
        label: -> { tag.h1("Delivery partner name", class: "govuk-heading-l") })
  %>
  <%= f.govuk_submit "Continue" %>
<% end %>
