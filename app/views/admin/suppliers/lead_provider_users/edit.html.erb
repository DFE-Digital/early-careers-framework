<% content_for :before_content, govuk_back_link(text: "Back", href: admin_supplier_users_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Edit user details</h1>
    <%= form_for(@lead_provider_user, url: admin_lead_provider_user_path(@lead_provider_user)) do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_text_field(
            :full_name,
            label: { text: "Full name" })
      %>
      <%= f.govuk_email_field(
            :email,
            label: { text: "Email" })
      %>
      <div class="govuk-button-group">
        <%= f.govuk_submit "Save" %>
        <%= govuk_link_to "Delete", delete_admin_lead_provider_user_path(@lead_provider_user), button: true, class: "govuk-button--warning", "data-test"=> "delete-button" %>
      </div>
    <% end %>
  </div>
</div>
