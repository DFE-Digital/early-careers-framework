<% content_for :after_nav, govuk_back_link(
  text: "Back",
  href: choose_cip_admin_lead_providers_path)
%>

<%= form_with model: @lead_provider_form, url: choose_cohorts_admin_lead_providers_path, method: :post do |f| %>
  <%= f.govuk_collection_check_boxes(
        :cohorts,
        @lead_provider_form.available_cohorts,
        :id,
        :display_name,
        legend: -> { tag.h1("Which cohorts are #{@lead_provider_form.name} working with?" , class: "govuk-heading-l") }
      ) %>
  <%= f.govuk_submit "Continue" %>
<% end %>
