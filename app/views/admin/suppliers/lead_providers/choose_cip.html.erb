<% content_for :before_content, govuk_back_link(
  text: "Back",
  href: supplier_type_admin_new_supplier_index_path)
%>

<%= form_with model: @lead_provider_form, url: choose_cip_admin_lead_providers_path, method: :post do |f| %>
  <%= f.govuk_collection_radio_buttons(
        :cip,
        @lead_provider_form.available_cips,
        :id,
        :name,
        legend: -> { tag.h1("What training material is #{@lead_provider_form.name} using?" , class: "govuk-heading-l") }
      ) %>
  <%= f.govuk_submit "Continue" %>
<% end %>
