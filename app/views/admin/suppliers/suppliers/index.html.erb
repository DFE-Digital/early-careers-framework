<%= render "layout", locals = { page: "suppliers" } %>

<p class="govuk-body-l">Manage your lead providers and delivery partners supplying training.</p>

<%= govuk_link_to "Add a new delivery partner",  choose_name_admin_delivery_partners_path, button: true %>

<table class="govuk-table">
  <thead>
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Supplier</th>
      <th scope="col" class="govuk-table__header">Supplier type</th>
      <th scope="col" class="govuk-table__header"></th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <% @suppliers.each do |supplier| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell"><%= govuk_link_to supplier.name, supplier_link(supplier) %></td>
        <td class="govuk-table__cell"><%= supplier.model_name.human %></td>
        <td class="govuk-table__cell"><%= link_to "Edit", "#" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= govuk_paginate @suppliers %>
