<% content_for :before_content, govuk_back_link(
  text: "Back",
  href: new_admin_supplier_path(continue: true))
%>

<%= form_with model: @new_supplier_form, url: supplier_type_admin_suppliers_path, method: :post do |f| %>

  <%= f.govuk_collection_radio_buttons(
        :type,
        @new_supplier_form.supplier_types,
        :id,
        :name,
        :hint,
        legend: -> { tag.h1('What type of supplier are you adding?', class: "govuk-heading-l") }
      ) %>
  <%= f.govuk_submit "Continue" %>
<% end %>
