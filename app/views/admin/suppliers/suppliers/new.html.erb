<% content_for :before_content, govuk_back_link(text: "Back", href: admin_suppliers_path) %>

<%= @value %>
<%= form_with model: @new_supplier_form, url: admin_suppliers_path, method: :post do |f| %>
  <%= f.govuk_text_field(
        :name,
        width: "three-quarters",
        label: -> { tag.h1("Supplier name", class: "govuk-heading-l") })
  %>
  <%= f.govuk_submit "Continue" %>
<% end %>
