<% content_for :title, "Delete user" %>
<h1>Do you want to delete this user?</h1>
<p class="govuk-!-font-weight-bold">Supplier user: <span class="govuk-!-font-weight-regular"><%= @appropriate_body_profile.user.full_name %></span></p>
<%= form_for :confirmation, url: admin_appropriate_bodies_user_path(@appropriate_body_profile), method: :delete do |f| %>
  <div class="govuk-button-group">
    <%= f.govuk_submit "Delete", warning: true %>
    <%= govuk_button_link_to "Back", edit_admin_appropriate_bodies_user_path(@appropriate_body_profile), class: "govuk-button--secondary" %>
  </div>
<% end %>
