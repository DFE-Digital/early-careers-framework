<% title = "Have you appointed an appropriate body?" %>
<% content_for :title, title %>
<% content_for :before_content, govuk_back_link(text: "Back", href: @form.from_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-xl"><%= school_name %></span>
    <h1 class="govuk-heading-xl"><%= title %></h1>

    <%= form_for @form, url: { action: :update_body_appointed }, method: :put do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_collection_radio_buttons(
        :body_appointed,
        @form.body_appointed_choices,
        :id, :name,
        inline: true,
        legend: { hidden: true }) do %>
      <% end %>

      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
