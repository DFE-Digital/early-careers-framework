<% content_for :title, "Induction tutor details" %>
<% content_for :before_content, govuk_back_link(
  text: "Back",
  href: full_name_nominate_induction_coordinator_path)
%>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <span class="govuk-caption-l"><%= @nominate_induction_tutor_form.school.name %></span>
        <h1 class="govuk-heading-xl">What’s <%= @nominate_induction_tutor_form.full_name_to_display %> email address? </h1>
        <p>We’ll use this address to contact them with more information.</p>



    <%= form_for @nominate_induction_tutor_form, url: { action: :check_email }, method: :put do |f| %>
      <%= f.govuk_error_summary %>
        <div class="govuk-form-group">
          <%= f.govuk_text_field(:email, label: { text: "What’s #{@nominate_induction_tutor_form.full_name_to_display} email address?",
           class: "govuk-visually-hidden" },
           width: "two-thirds") %>
        </div>
      <%= f.hidden_field :token, value: @nominate_induction_tutor_form.token %>
      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
