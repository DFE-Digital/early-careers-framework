<% content_for :title, "Nomination complete" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_panel(
          title_text: "Induction tutor nominated",
          text: nil,
          classes: "govuk-!-margin-bottom-8",
          html_attributes: { "data-test": "success-panel" }
        ) %>

    <h2 class="govuk-heading-m">What happens next</h2>
    <ul class="govuk-list govuk-list--bullet">
      <li>the person you nominated will be notified</li>
      <li>they can sign in and manage your induction programme</li>
      <li>they will receive any future notifications about the service</li>
    </ul>
  </div>
</div>
